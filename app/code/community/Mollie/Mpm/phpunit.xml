<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.0/phpunit.xsd"
         bootstrap="Test/TestHelpers/bootstrap.php"
         colors="true">

    <testsuites>
        <testsuite name="unit">
            <directory>Test</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../Mpm/Block</directory>
            <directory>../Mpm/controllers</directory>
            <directory>../Mpm/Helper</directory>
            <directory>../Mpm/Model</directory>
        </whitelist>
    </filter>
</phpunit>
