                    <frontName>mpm</frontName>
                </args>
            </mpm>
        </routers>
        <translate>
            <modules>
                <Mollie_Mpm>
                    <files>
                        <default>Mollie_Mpm.csv</default>
                    </files>
                </Mollie_Mpm>
            </modules>
        </translate>
        <layout>
            <updates>
                <mpm>
                    <file>mollie_mpm.xml</file>
                </mpm>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
