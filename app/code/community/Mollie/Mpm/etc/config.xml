<config>
    <modules>
        <Mollie_Mpm>
            <version>5.4.0</version>
        </Mollie_Mpm>
    </modules>
    <global>
        <models>
            <mpm>
                <class>Mollie_Mpm_Model</class>
                <resourceModel>mpm_resource</resourceModel>
            </mpm>
            <mpm_resource>
                <class>Mollie_Mpm_Model_Resource</class>
                <entities>
                    <payments>
                        <table>mollie_payments</table>
                    </payments>
                    <orderLines>
                        <table>mollie_order_lines</table>
                    </orderLines>
                </entities>
            </mpm_resource>
        </models>
        <blocks>
            <mpm>
                <class>Mollie_Mpm_Block</class>
            </mpm>
        </blocks>
        <helpers>
            <mpm>
                <class>Mollie_Mpm_Helper</class>
            </mpm>
        </helpers>
        <payment>
            <groups>
                <mollie>Mollie Payment Methods</mollie>
                <mollie_deprecated>Mollie Old Methods</mollie_deprecated>
            </groups>
        </payment>
        <resources>
            <mpm_setup>
                <setup>
                    <module>Mollie_Mpm</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mpm_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <mollie_controller_front_init_before>
                        <type>object</type>
                        <class>Mollie_Mpm_Helper_Autoloader</class>
                        <method>createAndRegister</method>
                    </mollie_controller_front_init_before>
                </observers>
            </controller_front_init_before>
            <order_cancel_after>
                <observers>
                    <mollie_order_cancel_after>
                        <type>singleton</type>
                        <class>Mollie_Mpm_Model_Observer</class>
                        <method>orderCancelAfter</method>
                    </mollie_order_cancel_after>
                </observers>
            </order_cancel_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <mollie_sales_order_creditmemo_save_after>
                        <type>singleton</type>
                        <class>Mollie_Mpm_Model_Observer</class>
                        <method>salesOrderCreditmemoSaveAfter</method>
                    </mollie_sales_order_creditmemo_save_after>
                </observers>
            </sales_order_creditmemo_save_after>
            <sales_order_shipment_save_before>
                <observers>
                    <mollie_sales_order_shipment_save_after>
                        <type>singleton</type>
                        <class>Mollie_Mpm_Model_Observer</class>
                        <method>salesOrderShipmentSaveBefore</method>
                    </mollie_sales_order_shipment_save_after>
                </observers>
            </sales_order_shipment_save_before>
            <sales_order_shipment_track_save_after>
                <observers>
                    <mollie_sales_order_shipment_track_save_after>
                        <type>singleton</type>
                        <class>Mollie_Mpm_Model_Observer</class>
                        <method>salesOrderShipmentTrackSaveAfter</method>
                    </mollie_sales_order_shipment_track_save_after>
                </observers>
            </sales_order_shipment_track_save_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <mollie_mpm_payment_fee>
                        <class>mpm/totals_paymentFee_quote</class>
                        <after>subtotal,discount</after>
                        <before>grand_total,tax</before>
                        <renderer>mpm/checkout_paymentFee</renderer>
                        <admin_renderer>mpm/adminhtml_sales_order_create_paymentFee</admin_renderer>
                    </mollie_mpm_payment_fee>
                    <mollie_mpm_payment_fee_tax>
                        <class>mpm/totals_paymentFee_quoteTax</class>
                        <after>subtotal,discount,shipping,tax</after>
                        <before>grand_total</before>
                    </mollie_mpm_payment_fee_tax>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <mollie_mpm_payment_fee>
                        <class>mpm/totals_paymentFee_invoice</class>
                        <after>subtotal,discount</after>
                        <before>grand_total,tax</before>
                    </mollie_mpm_payment_fee>
                    <mollie_mpm_payment_fee_tax>
                        <class>mpm/totals_paymentFee_invoiceTax</class>
                        <after>subtotal,discount,shipping,tax</after>
                        <before>grand_total</before>
                    </mollie_mpm_payment_fee_tax>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <mollie_mpm_payment_fee>
                        <class>mpm/totals_paymentFee_creditmemo</class>
                        <after>subtotal,discount</after>
                        <before>grand_total,tax</before>
                    </mollie_mpm_payment_fee>
                    <mollie_mpm_payment_fee_tax>
                        <class>mpm/totals_paymentFee_creditmemoTax</class>
                        <after>subtotal,discount,shipping,tax</after>
                        <before>grand_total</before>
                    </mollie_mpm_payment_fee_tax>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <mollie_mpm_payment_fee>
                    <to_order>*</to_order>
                </mollie_mpm_payment_fee>
                <base_mollie_mpm_payment_fee>
                    <to_order>*</to_order>
                </base_mollie_mpm_payment_fee>
                <mollie_mpm_payment_fee_tax>
                    <to_order>*</to_order>
                </mollie_mpm_payment_fee_tax>
                <base_mollie_mpm_payment_fee_tax>
                    <to_order>*</to_order>
                </base_mollie_mpm_payment_fee_tax>
            </sales_convert_quote_address>
            <sales_convert_order>
                <mollie_mpm_payment_fee>
                    <to_invoice>*</to_invoice>
                </mollie_mpm_payment_fee>
                <base_mollie_mpm_payment_fee>
                    <to_invoice>*</to_invoice>
                </base_mollie_mpm_payment_fee>
                <mollie_mpm_payment_fee_tax>
                    <to_invoice>*</to_invoice>
                </mollie_mpm_payment_fee_tax>
                <base_mollie_mpm_payment_fee_tax>
                    <to_invoice>*</to_invoice>
                </base_mollie_mpm_payment_fee_tax>
                <mollie_mpm_payment_fee>
                    <to_cm>*</to_cm>
                </mollie_mpm_payment_fee>
                <base_mollie_mpm_payment_fee>
                    <to_cm>*</to_cm>
                </base_mollie_mpm_payment_fee>
                <mollie_mpm_payment_fee_tax>
                    <to_cm>*</to_cm>
                </mollie_mpm_payment_fee_tax>
                <base_mollie_mpm_payment_fee_tax>
                    <to_cm>*</to_cm>
                </base_mollie_mpm_payment_fee_tax>
            </sales_convert_order>
        </fieldsets>
        <pdf>
            <totals>
                <payment_fee translate="title">
                    <title>Mollie payment fee</title>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>100</sort_order>
                    <model>mpm/totals_paymentFee_invoicePdf</model>
